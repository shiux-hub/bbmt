{
  "name": "bbmt",
  "displayName": "BBMT",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@9.7.0",
  "description": "Browser bookmark management tool",
  "author": "Dropout",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "eslint": "eslint . --cache",
    "eslint:fix": "eslint . --cache --max-warnings 0 --fix",
    "prepare": "husky",
    "commit": "git-cz"
  },
  "dependencies": {
    "@vueuse/core": "^10.11.1",
    "axios": "^1.7.3",
    "plasmo": "0.88.0",
    "radash": "^12.1.0",
    "vue": "3.4.37",
    "vue-router": "^4.4.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.25.0",
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/cz-commitlint": "^19.4.0",
    "@commitlint/prompt-cli": "^19.4.0",
    "@commitlint/types": "^19.0.3",
    "@types/chrome": "0.0.269",
    "@types/node": "22.1.0",
    "@vue/tsconfig": "^0.5.1",
    "autoprefixer": "^10.4.20",
    "daisyui": "^4.12.10",
    "eslint": "npm:eslint-ts-patch@9.8.0-1",
    "eslint-plugin-tailwindcss": "^3.17.4",
    "eslint-ts-patch": "9.8.0-1",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.8",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.9",
    "typescript": "5.5.4"
  },
  "lint-staged": {
    "*.{scss,css,vue,ts,md}": [
      "eslint --fix"
    ]
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "bookmarks"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  }
}
